# =============================================================================
# ReelForge Marketing Engine - Environment Variables
# Copy this file to .env and fill in your values
# =============================================================================

# ===========================================
# Database (Required)
# ===========================================
# Render PostgreSQL connection string
DATABASE_URL=postgresql://user:password@host:5432/database

# ===========================================
# Redis (Required)
# ===========================================
# Render Redis connection string
REDIS_URL=redis://red-xxxxx:6379

# ===========================================
# YouTube Data API (Required for discovery)
# ===========================================
# Get from: https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=AIza...

# ===========================================
# Apify (Optional - for Instagram/TikTok)
# ===========================================
# Get from: https://console.apify.com/account/integrations
APIFY_API_TOKEN=apify_api_...

# ===========================================
# Brevo - Email (Required for outreach)
# ===========================================
# Get from: https://app.brevo.com/settings/keys/api
BREVO_API_KEY=xkeysib-...
BREVO_SENDER_EMAIL=jr@reelforgeai.io
BREVO_SENDER_NAME=Jr from ReelForge

# Webhook signing secret (set in Brevo webhook settings)
BREVO_WEBHOOK_SECRET=your-webhook-signing-secret

# ===========================================
# Email Verification (Recommended)
# ===========================================
# Clearout: https://app.clearout.io/settings/api
CLEAROUT_API_KEY=

# OR Hunter.io (alternative): https://hunter.io/api_keys
HUNTER_API_KEY=

# ===========================================
# Error Monitoring (Recommended)
# ===========================================
# Get from: https://sentry.io/settings/projects/
SENTRY_DSN=

# ===========================================
# Reditus - Affiliate Tracking (Optional)
# ===========================================
REDITUS_API_KEY=
REDITUS_PROGRAM_ID=

# ===========================================
# Outreach Settings
# ===========================================
DAILY_EMAIL_LIMIT=50
MIN_RELEVANCE_SCORE=0.5

# ===========================================
# Discovery Filters
# ===========================================
MIN_YOUTUBE_SUBSCRIBERS=5000
MAX_YOUTUBE_SUBSCRIBERS=500000
MIN_INSTAGRAM_FOLLOWERS=5000
MIN_TIKTOK_FOLLOWERS=10000

# ===========================================
# Compliance
# ===========================================
DATA_RETENTION_DAYS=180
REQUIRE_EMAIL_VERIFICATION=true

# ===========================================
# Application
# ===========================================
ENVIRONMENT=development
LOG_LEVEL=INFO
TIMEZONE=America/New_York

# Admin API key for GDPR endpoints
ADMIN_API_KEY=change-me-in-production

# ===========================================
# Server
# ===========================================
WEBHOOK_HOST=0.0.0.0
WEBHOOK_PORT=8080
